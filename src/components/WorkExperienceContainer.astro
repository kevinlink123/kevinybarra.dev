---
interface Props {
    workDates: {
        from: string;
        to: string;
    };
    jobTitle: string;
    companyName: string;
    jobBulletPoints: string[];
    website: string;
}

const { workDates, jobTitle, companyName, jobBulletPoints, website } = Astro.props;
---
<li class="lg:overflow-hidden overflow-visible mb-20 p-4 rounded-lg cursor-pointer transition-all duration-300 ease-in-out lg:bg-inherit bg-slate-400/10 hover:bg-slate-400/10 hover:shadow-2xl lg:shadow-none shadow-xl relative before:content-[''] before:absolute before:pointer-events-none before:-top-1/2 before:-left-1/2 before:w-[200%] before:h-[200%] before:bg-[linear-gradient(0deg,transparent,transparent_30%,rgba(0,255,255,0.3))] before:rotate-45 before:transition-all before:duration-1000 before:opacity-0 hover:before:opacity-100 hover:before:translate-y-[200%]">
    <a class="lg:flex block" rel="noopener noreferer" target="_blank" href={website ? website : "#"}>
        <h3 class="lg:mr-14 mr-0 text-nowrap text-subtitle">{workDates.from} - {workDates.to}</h3>
        <div class="work-experience-content">
            <h2 class="font-black text-lg tracking-wide lg:mb-4 mb-10">{jobTitle} Â· {companyName}</h2>
            <ul class="mb-1 text-gray-500">
                {jobBulletPoints.map((bullet) => <li class="text-wrap"><span class="inline-block h-2 w-2 rounded-full mx-2 bg-gray-400"></span>{bullet}</li>)}
            </ul>
        </div>
        <div class="absolute lg:hidden block bottom-0 right-1/2 translate-1/2 bg-black/70 p-1.5 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width={1.5} stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>              
        </div>
    </a>
</li>